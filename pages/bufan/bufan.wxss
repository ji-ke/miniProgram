/* pages/bufan/bufan.wxss */
.topbar {
  width: 100%;
  height: 40px;
  display: flex;
  /* justify-content: space-between; */
  /* margin: 0 10px; */
  align-items: center;
  /* padding: 0 20px; */
}

.topbar-left {
  color: #3D3D3D;
  margin-left: 10px;
}

.logo-img {
  /* width: 40px; */
  height: 30px;
}

.topbar-center {
  text-align: center;
  font-size: 13px;
  color: #ccc;
  flex: 1;
}

.topbar-right {
  width: 20px;
  height: 14px;
  margin-right: 10px;
}

.line {
  background-color: #3D3D3D;
  width: 20px;
  height: 2px;
  margin: 3px 0;
}

.about-title {
  height: 76px;
  text-align: center;

}

.about-us {
  font-size: 16px;
  color: #666;
  /* margin-bottom: 0; */
}

.about-line {
  margin: 0;
  padding: 0;
  display: inline-block;
  height: 2px;
  width: 69.2px;
  background-color: #0ff;
}

.about-course {
  color: #ccc;
  font-size: 12px;
}

.content {
  color: #666;
  font-size: 14px;
  margin-bottom: 37px;
}

.ui {
  height: 150px;
  background-color: #ccc;
  margin-bottom: 17px;
  text-align: center;
  overflow: hidden;
}

.ui-title {
  color: #3D3D3D;
  font-size: 18px;
  margin-top: 17px;
}

.ui-content {
  color: #666;
  font-size: 14px;
  margin-top: 6px;
}

.ui-button {
  color: #666;
  width: 86px;
  height: 25px;
  border: 1px solid #fff;
  border-radius: 25px;
  margin-top: 18px;
  display: inline-block;
}

.web {
  height: 150px;
  background-color: #ccc;
  margin-bottom: 17px;
  text-align: center;
  overflow: hidden;
}